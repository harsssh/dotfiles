inoremap jj <ESC>
nmap <silent> <Esc><Esc> :nohlsearch<CR>
nnoremap <C-W> gt
nnoremap <C-Q> gT
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
nnoremap ss :split<CR>
nnoremap sv :vsp<CR>

set incsearch
set ignorecase
set smartcase
set hlsearch
set virtualedit
set clipboard+=unnamed
set showcmd
set virtualedit=all
